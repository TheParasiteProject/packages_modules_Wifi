<configuration description="Test config for Wi-Fi Connection CTS tests">
  <option name="test-suite-tag" value="cts-v-host" />
  <option name="config-descriptor:metadata" key="component" value="wifi" />
  <option name="config-descriptor:metadata" key="parameter" value="not_instant_app" />
  <option name="config-descriptor:metadata" key="parameter" value="not_multi_abi" />
  <option name="config-descriptor:metadata" key="parameter" value="secondary_user" />

  <device name="AndroidDevice">
    <target_preparer class="AndroidDeviceFeaturesCheckDecorator">
      <option name="required_feature" value="android.hardware.wifi" />
    </target_preparer>
    <target_preparer class="AndroidInstallAppsDecorator" />
  </device>

  <test class="MoblyAospTest" />

  <!-- Load the py zip file here instead of the `python_test_host` target. -->
  <option name="mobly_pkg" key="file" value="CtsWifiConnectionTests_py.zip" />
  <option name="build_apk" key="file" value="wifi_mobly_snippet.apk" />
  <option name="mobly_config" key="file" value="WifiConnectionTestbed.yaml" />
</configuration>
