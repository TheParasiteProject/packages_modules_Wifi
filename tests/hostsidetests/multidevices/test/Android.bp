genrule {
    name: "CtsWifiConnectionTests",
    device_first_srcs: [
        // Add snippet APK build targets here
        ":wifi_mobly_snippet",
    ],
    srcs: [
        // Declare all test files here
        "connection/*",
    ],
    tools: [
        "soong_zip",
    ],
    cmd: "mkdir -p $(genDir)/dist/snippets &&" + // Create temp directory
        // Copy all connection/ test files
        "cp -rv packages/modules/Wifi/tests/hostsidetests/multidevices/test/connection/ $(genDir)/dist/ &&" +
        // Copy the entry point to package root as __main__.py
        "cp $(genDir)/dist/connection/wifi_connection_test_suite.py $(genDir)/dist/__main__.py &&" +
        // Copy requirements file to package root
        "cp $(genDir)/dist/connection/requirements.txt $(genDir)/dist/ &&" +
        // Copy Snippet APK to 'snippets' subdirectory
        "cp $(location :wifi_mobly_snippet) $(genDir)/dist/snippets &&" +
        // Zip contents of dist directory
        "$(location soong_zip) -o $(out) -C $(genDir)/dist -D $(genDir)/dist",
    out: ["CtsWifiConnectionTests"],
}


